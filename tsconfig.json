{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es5", "es6", "es2016", "es2019", "dom"],
    "downlevelIteration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./es5",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": [
    "lib/*.ts",
    "lib/**/*.ts",
    "lib/**/*.js"
  ]
}
